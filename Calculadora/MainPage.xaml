<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculadora.MainPage"
             Title=""
             >

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image Source="calculator_icon.png"
                   WidthRequest="300"
                   HeightRequest="300"
                   />
            <Entry x:Name="inp_v1" Placeholder="Digite o primeiro valor"/>
            <Entry x:Name="inp_v2" Placeholder="Digite o segundo valor"/>

            <HorizontalStackLayout Spacing="100">
                <Picker
                    x:Name="picker_operador"
                    Title="Selecione um Operador"
                    >

                    <Picker.Items>
                        <x:String>Soma</x:String>
                        <x:String>Subtração</x:String>
                        <x:String>Multiplicação</x:String>
                        <x:String>Divisão</x:String>
                    </Picker.Items>
                    
                </Picker>

                <Button Text="Calcular" Clicked="btn_Somar"
                        WidthRequest="200"
                        HeightRequest="60"
                        /> 

            </HorizontalStackLayout>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
